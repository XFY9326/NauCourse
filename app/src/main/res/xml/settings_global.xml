<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/update_check">
        <Preference
            android:key="UPDATE_NOW"
            android:title="@string/update_now" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="AUTO_CHECK_UPDATE"
            android:summary="@string/auto_check_update_sum"
            android:title="@string/auto_check_update" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="AUTO_CHECK_UPDATE"
            android:key="ONLY_UPDATE_APPLICATION_UNDER_WIFI"
            android:summary="@string/only_update_application_under_wifi_sum"
            android:title="@string/only_update_application_under_wifi" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="AUTO_CHECK_UPDATE"
            android:disableDependentsState="true"
            android:key="AUTO_CHECK_IMPORTANT_UPDATE"
            android:summary="@string/auto_check_important_update_sum"
            android:title="@string/auto_check_important_update" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="AUTO_CHECK_IMPORTANT_UPDATE"
            android:key="CHECK_BETA_UPDATE"
            android:summary="@string/beta_version_check_sum"
            android:title="@string/beta_version_check" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/data_get">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="UPDATE_DATA_ON_START"
            android:summary="@string/on_start_data_get_sum"
            android:title="@string/on_start_data_get" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="UPDATE_DATA_ON_START"
            android:key="ONLY_UPDATE_UNDER_WIFI"
            android:summary="@string/only_update_under_wifi_sum"
            android:title="@string/only_update_under_wifi" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="UPDATE_DATA_ON_START"
            android:key="ASYNC_PERSONAL_INFO_BY_DAY"
            android:summary="@string/async_personal_info_by_day_sum"
            android:title="@string/async_personal_info_by_day" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="UPDATE_DATA_ON_START"
            android:key="AUTO_UPDATE_COURSE_TABLE"
            android:summary="@string/auto_update_course_table_sum"
            android:title="@string/auto_update_course_table" />
    </PreferenceCategory>
</PreferenceScreen>