<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.AppWidgetNextCourse">

    <LinearLayout
        android:id="@+id/layout_widgetNextCourse"
        style="@style/AppTheme.AppWidgetNextCourse.Inside.Dark"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.AppWidgetNextCourseTextTheme.Dark">

        <ImageView
            android:id="@+id/iv_widgetCourseColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_widgetCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_widgetCourseDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_widgetCourseStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

</FrameLayout>